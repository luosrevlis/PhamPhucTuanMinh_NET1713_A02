@page
@model BookingReservations.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Booking Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">
            @Model.BookingReservation.Customer.EmailAddress
        </dd>
        <dt class="col-sm-2">Booking Date</dt>
        <dd class="col-sm-10">
            @if (Model.BookingReservation.BookingDate.HasValue)
            {
                @Model.BookingReservation.BookingDate.Value.ToShortDateString()
            }
        </dd>
        <dt class="col-sm-2">Total Price</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingReservation.TotalPrice)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="BookingReservation.BookingReservationId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="Index">Back to List</a>
    </form>
</div>
