@page
@model BookingReservations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Booking Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">
            @Model.BookingReservation.Customer.EmailAddress
        </dd>
        <dt class="col-sm-2">Booking Date</dt>
        <dd class="col-sm-10">
            @if (Model.BookingReservation.BookingDate.HasValue)
            {
                @Model.BookingReservation.BookingDate.Value.ToShortDateString()
            }
        </dd>
        <dt class="col-sm-2">Stay Period</dt>
        <dd class="col-sm-10">
            @Model.Details[0].StartDate.ToShortDateString() to @Model.Details[0].EndDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">Total Price</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingReservation.TotalPrice)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Room Number</th>
            <th>Room Type</th>
            <th>Room Capacity</th>
            <th>Booking Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Details)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Room.RoomNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room.RoomType.RoomTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room.RoomMaxCapacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActualPrice)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-page="Index">Back to List</a>
</div>
